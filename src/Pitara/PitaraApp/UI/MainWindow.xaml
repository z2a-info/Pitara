            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="miscKeyWordSource" Source="{Binding MiscKeywordSource}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="QueryDisplayName" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription Converter="{StaticResource firstLetterConverter}" PropertyName="QueryDisplayName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
