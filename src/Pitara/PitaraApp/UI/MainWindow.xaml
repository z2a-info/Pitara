        <local:ImageConverterFromString x:Key="ImageConverterFromString" />

        <!--<BitmapImage x:Key="searchHint" UriSource="pack://application:,,,/Images/SearchHin.png" />-->
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <CollectionViewSource x:Key="HeightViewSource" Source="{Binding HeightSource}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Height" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Height" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="customeKeyWordSource" Source="{Binding CustomeKeyWordSource}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="QueryDisplayName" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription Converter="{StaticResource firstLetterConverter}" PropertyName="QueryDisplayName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>


        <CollectionViewSource x:Key="locationSource" Source="{Binding LocationSource}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="QueryDisplayName" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription Converter="{StaticResource firstLetterConverter}" PropertyName="QueryDisplayName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>


        <CollectionViewSource x:Key="folderFileNameSource" Source="{Binding FolderFileNameSource}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="QueryDisplayName" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription Converter="{StaticResource firstLetterConverter}" PropertyName="QueryDisplayName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="favoriteViewSource" Source="{Binding FavoriteViewSource}">
